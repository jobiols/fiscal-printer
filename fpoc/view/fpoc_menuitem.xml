                  name="Desconectadas"
                  parent="menu_fp_config"
                  sequence="10"
            action="action_disconnected_fiscal_printers"
            />

        <menuitem id="menu_fiscal_printers"
                  name="Conectadas"
                  parent="menu_fp_config"
                  sequence="20"
            action="action_fiscal_printer_fiscal_printer_fiscal_printers"
            />
